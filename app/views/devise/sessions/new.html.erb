<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { id: 'admin-sign-in' }) do |f| %>
  <div class='form-heading'>
    <div class='form-heading-title'>
      Sign In
    </div>
  </div>
  <div>
    <%= f.label :email %><br />
    <%= f.email_field :email,
      autofocus: true,
      value: Rails.env.development? ? 'test@test.com' : '' %>
  </div>

  <div>
    <%= f.label :password %><br />
    <%= f.password_field :password,
      autocomplete: 'off',
      value: Rails.env.development? ? 'testtest' : '' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class='form-rememberable'>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class='form-submit-wrapper'>
    <%= f.submit 'Sign In' %>
  </div>

  <%= render 'devise/shared/links' %>
<% end %>
